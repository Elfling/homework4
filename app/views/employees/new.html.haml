
%h1 New Employee

=form_for @employee do |e| 
   %e
      = e.label :name, 'Name:'
      = e.text_field :name 

   %br
   = e.fields_for :address do |a|
      %e
         = a.label :street, 'Street:'
         = a.text_field :street
      %br   
      %e
         = a.label :city, 'City:'
         = a.text_field :city
   %br      
   = e.fields_for :corporation do |corpo|
      %e
         = corpo.label :name, 'Corporation:'
         = corpo.text_field :name
   %br
   %e
      = e.submit 'Add employee to database', :class => "form_submit"
   
= link_to 'Back to Employee list', employees_path
