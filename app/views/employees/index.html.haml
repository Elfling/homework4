%strong Employee list

- 5.times do 
   %br

%table
   %tr
      %th Name
      %th Corporation
      %th Address
      %th Show
      %th Edit
      %th Delete
   - @employees.each do |e|
      %tr
         %td{:width => "130em", :align=> "center"} 
            = e.name
         %td{:width => "160em", :align=> "center"} 
            = e.corporation.name
         %td{:width => "100em", :align=> "center"} 
            = e.address.street ,
            = e.address.city
         %td  
            = link_to 'Show', employee_path(e)
         %td 
            = link_to 'Edit', edit_employee_path(e)
         %td 
            = link_to 'Delete', employee_path(e), method: :delete, data: {confirm: 'Are you sure?'}
            
- 5.times do 
   %br
          
= link_to 'Add new employee', new_employee_path
